<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="60dp">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_tm_logo"
        app:tint="@color/tm_green"
        android:contentDescription="AI Avatar"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/chat_bubble_ai"
        app:cardCornerRadius="18dp"
        app:cardElevation="1dp"
        app:strokeWidth="0dp"
        style="@style/Widget.MaterialComponents.CardView">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:text="Halo! TaskMate siap memberikan bantuan."
            android:textColor="@color/chat_text_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:lineSpacingMultiplier="1.2"
            android:maxWidth="260dp"/>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>