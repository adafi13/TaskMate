<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="12dp"
    android:paddingEnd="60dp">

    <androidx.cardview.widget.CardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="top"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/chat_avatar_bg"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@drawable/ic_robot"
            app:tint="@color/tm_green"
            android:contentDescription="AI Avatar"/>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/chat_bubble_ai"
        app:cardCornerRadius="18dp"
        app:cardElevation="1dp"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:text="Halo! TaskMate siap memberikan bantuan."
            android:textColor="@color/chat_text_primary"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:lineSpacingMultiplier="1.2"
            android:maxWidth="260dp"/>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>