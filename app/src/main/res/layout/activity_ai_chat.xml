<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F7"> <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="0dp"
    android:background="@android:color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="TaskMate AI ðŸ¤–"
        app:titleTextColor="#1A1A1A"
        app:subtitle="Powered by Groq"
        app:subtitleTextColor="@color/tm_green"
        app:titleCentered="false"
        android:elevation="0dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>
</com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom|center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:background="#00FFFFFF"
        android:layout_alignParentBottom="true">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <EditText
                android:id="@+id/etInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Tulis pesan..."
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="4"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:textSize="15sp"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:rotation="180"
            app:backgroundTint="@color/tm_green"
            app:tint="@android:color/white"
            app:elevation="2dp"
            app:fabSize="mini"
            android:contentDescription="Kirim" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"
        android:layout_above="@id/layoutInput"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:scrollbars="vertical"
        android:overScrollMode="never"/>

</RelativeLayout>